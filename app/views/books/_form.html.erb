<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control border-info" %>
  </div>


  <div class="form-group">
    <%= form.label :author %>
    <%= form.text_field :author, class: "form-control border-info" %>
  </div>

  <div class="form-group">
    <%= form.label :given_date %>
    <%= form.date_select :given_date, class: "form-control border-info" %>
  </div>

  <div class="form-group">
    <%= form.label :returned_date %>
    <%= form.date_select :returned_date, class: "form-control border-info" %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, options_for_select(@statuses), class: "form-control" %>
  </div>

  <div class="actions text-center">
    <%= form.submit"Create book", class: "btn btn-lg btn-primary"%>
  </div>
<% end %>
